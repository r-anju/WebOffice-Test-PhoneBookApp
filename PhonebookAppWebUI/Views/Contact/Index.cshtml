@model List<PhoneBookApp.BusinessObjectLayer.Dtos.ContactDto>
@{
    ViewBag.Title = "Contact List";

}

<h2>Contact List of @Session["NickName"]</h2>
<a href="/Contact/Add" class="btn btn-success">Add New</a>

@foreach (var item in Model)
{
    <div class="row mt-3" style="margin-top:10px">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">Name</div>
                        <div class="col-lg-6">@item.ContactName</div>
                    </div>
                    <div class="row">

                        <div class="col-lg-6">Phone number</div>
                        <div class="col-lg-6">@item.PhoneNumber</div>

                    </div>
                    <div class="row">
                        <div class="col-lg-6">Email Address</div>
                        <div class="col-lg-6">@item.EmailAddress</div>

                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <a href="/Contact/Edit/@item.Id" class="btn btn-primary">Edit</a>
                            <a href="/Contact/Delete/@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
