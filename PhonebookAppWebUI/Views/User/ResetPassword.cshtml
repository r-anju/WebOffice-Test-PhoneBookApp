
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<h2>ResetPassword</h2>

@using (Html.BeginForm("ConfirmResetPassword", "User", FormMethod.Post, new { @Id = "resetPassword" }))
{
    <div class="form-group">
        <label for="password">Password</label>
        <input name="Password" type="password" class="form-control" id="password" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input name="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    @Html.Partial("~/Views/AlertPartial.cshtml")
}
