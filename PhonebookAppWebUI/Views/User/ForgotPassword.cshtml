
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<h2>ForgotPassword</h2>
@using (Html.BeginForm("AccountVerification", "User", FormMethod.Post, new { @Id = "forgotPassword" }))
{
    <div class="form-group">
        <label for="emailAddress">Email address </label>
        <input name="EmailAddress" type="text" class="form-control" id="emailAddress" placeholder="Email Addres">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    @Html.Partial("~/Views/AlertPartial.cshtml")
}

